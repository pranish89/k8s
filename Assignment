vi mongo_deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mongo
spec:
  selector:
    matchLabels:
      appdb: testdb
  replicas: 1
  template:
    metadata:
      labels:
        appdb: testdb
    spec:
      containers:
      - name: mongoC
        image: mongo:3.3
        env:
        - name: MONGODB_DATABASE
          value: testdata
        ports:
        - containerPort: 27017
vi mongo_service.yaml
apiVersion: v1
kind: Service
metadata:
  name: mongo
  labels:
    app: testdb
spec:
  ports:
  - port: 27017
    protocol: TCP
  selector:
    appdb: testdb
vi node_deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nodejstest
spec:
  selector:
    matchLabels:
      app: test
  replicas: 1
  template:
    metadata:
      labels:
        app: test
    spec:
      containers:
      - name: test-app
        image: devopsedu/employee
        env:
        - name: MONGODB_HOST
          value: mongo
        ports:
        - containerPort: 8888
          name: web-port
vi node_service.yaml
apiVersion: v1
kind: Service
metadata:
  name: test
  labels:
    apps: test
spec:
  type: NodePort
  ports:
  - name: tcp-31081-8888
    nodePort: 31081
    port: 8888
    protocol: TCP
  selector:
    app: test
